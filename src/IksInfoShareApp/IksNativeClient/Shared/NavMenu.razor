<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""></a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="nav-menu">
        <div class="nav-item">
            <button class="@_friendsBtnCss" @onclick="HandleFriendsButtonClick">
                <span class="oi oi-home" aria-hidden="true"></span>
            </button>
        </div>
        <div class="nav-item">
            <button class="@_chatRoomBtnCss" @onclick="HandleChatRoomButtonClick">
                <span class="oi oi-plus" aria-hidden="true"></span>
            </button>
        </div>
        <div class="nav-item">
            <button class="@_friendAddBtnCss" @onclick="HandleFriendAddButtonClick">
                <span class="oi oi-list-rich" aria-hidden="true"></span>
            </button>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    /// <summary>
    /// ナビゲーションボタンデフォルトCSS
    /// </summary>
    private const string _defaultNavButtonCss = "";

    /// <summary>
    /// ナビゲーションボタンアクティブ時のCSS
    /// </summary>
    private const string _activeNavButtonCss = "active";

    /// <summary>
    /// HOMEボタン
    /// </summary>
    private string _friendsBtnCss = _defaultNavButtonCss;

    /// <summary>
    /// 追加ボタン
    /// </summary>
    private string _chatRoomBtnCss = _defaultNavButtonCss;

    /// <summary>
    /// 設定ボタン
    /// </summary>
    private string _friendAddBtnCss = _defaultNavButtonCss;

    /// <summary>
    /// 友達一覧ボタン押下時処理
    /// </summary>
    private void HandleFriendsButtonClick()
    {
        // 友達一覧へ遷移
        ScreenTransition(ScreenDef.SCREEN_ID_FRIENDS);
        // 友達一覧ボタンをアクティブにする
        SwitchingNavButtonCss(ref _friendsBtnCss);
    }

    /// <summary>
    /// チャットルームボタン押下時処理
    /// </summary>
    private void HandleChatRoomButtonClick()
    {
        // チャットルームへ遷移
        ScreenTransition(ScreenDef.SCREEN_ID_CHATROOM);
        // チャットルームボタンをアクティブにする
        SwitchingNavButtonCss(ref _chatRoomBtnCss);
    }

    /// <summary>
    /// 友達追加ボタン押下時処理
    /// </summary>
    private void HandleFriendAddButtonClick()
    {
        // 友達追加へ遷移
        ScreenTransition(ScreenDef.SCREEN_ID_FRIEND_ADD);
        // 友達追加ボタンをアクティブにする
        SwitchingNavButtonCss(ref _friendAddBtnCss);
    }

    /// <summary>
    /// ナビゲーションメニューのCSS切り替え
    /// </summary>
    /// <param name="activeCss">アクティブ対象要素のCSS</param>
    private void SwitchingNavButtonCss(ref string activeCss)
    {
        // ボタンCSS初期化
        _friendsBtnCss = _defaultNavButtonCss;
        _chatRoomBtnCss = _defaultNavButtonCss;
        _friendAddBtnCss = _defaultNavButtonCss;
        // 対象のナビゲーションメニューをアクティブ化
        activeCss = _activeNavButtonCss;
    }

    /// <summary>
    /// 画面遷移処理
    /// </summary>
    /// <param name="activeCss"></param>
    private void ScreenTransition(short activeCss)
    {
        // Index.Razor画面の画面遷移処理にコールバック通知
    }
}
