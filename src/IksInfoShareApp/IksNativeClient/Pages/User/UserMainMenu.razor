<div class="chat_main_menu">
    <div class="chat_main_menu_header">
        <ul class="flex header_ul">
            <li>
                <span>すべて</span>
            </li>
            <li>
                <span>友だち</span>
            </li>
            <li>
                <span>グループ</span>
            </li>
        </ul>
    </div>
    <hr />
    <div class="flex chat_main_menu_body">
        <UserList @ref="UserList" />
        <ChatRoom />
    </div>
</div>

@code {
    /// <summary>
    /// アクティブ画面ID
    /// </summary>
    private short _activeWindowId = CLDEF.WIN_ID_USER;

    /// <summary>
    /// ユーザー一覧インスタンス
    /// </summary>
    public UserList UserList = new();

    /// <summary>
    /// 画面非表示
    /// </summary>
    public async Task IsNotShow()
    {
        await UserList.IsNotShow();
        await this.InvokeAsync(this.StateHasChanged);
    }

    /// <summary>
    /// 画面レンダリング
    /// </summary>
    public async Task OnRender()
    {
        if (_activeWindowId == CLDEF.WIN_ID_USER)
        {
            await UserList.OnRender();
        }
        await this.InvokeAsync(this.StateHasChanged);
    }
}
